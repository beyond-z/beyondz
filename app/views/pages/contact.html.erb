<%= render 'layouts/header' %>
<br/>
<div class="row">
	<div class="col-md-10 col-md-offset-1 jumbotron">
		<div class="container">
			<h1 class="text-primary text-center">Get in touch with Beyond Z</h1>
			<div class="sign_up_bottom">
		  <div>Sign up now to get updates from us or to learn more about forming school partnerships with us!</div>
			  <div style="width:300px !important; margin:0px auto; text-align:center;" id="mc_embed_signup">
			    <form action="http://beyondz.us7.list-manage.com/subscribe/post?u=a6afcda1d714a49d83be66f7a&amp;id=17b0f4c2ab" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="row validate form-inline" target="_blank" novalidate> 
			      <div class="mc-field-group">
			        <input type="email" value="" name="EMAIL" class="input-lg required email" id="mce-EMAIL" placeholder="Enter email">
			      </div>
			      <div id="mce-responses" class="clear">
			        <div class="response" id="mce-error-response" style="display:none"></div>
			        <div class="response" id="mce-success-response" style="display:none"></div>
			      </div>  
			      <div class="clear">
			        <input type="submit" value="Submit" name="subscribe" id="mc-embedded-subscribe" class="btn btn-lg btn-danger" style="margin:0px auto;">
			      </div>
			    </form>
			  </div>
			</div>
		</div>

		</br>

		<div class="row text-center">
			<div class="col-md-8 col-md-offset-2">
				<h3>We'd love to hear from you!</h3>
					<h5>General information: <%= link_to 'info@beyondz.org', 'mailto:info@beyondz.org', :target => "_blank" %></h5>
					<h5>Partnerships: <%= link_to 'partnerships@beyondz.org', 'mailto:partnerships@beyondz.org', :target => "_blank" %></h5>
					<h5>Careers: <%= link_to 'jobs@beyondz.org', 'mailto:jobs@beyondz.org', :target => "_blank" %></h5>
			</div>
		</div>

	</div>
</div>

<br/>

